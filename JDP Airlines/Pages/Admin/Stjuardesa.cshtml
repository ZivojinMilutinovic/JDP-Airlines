@page
@model JDP_Airlines.Pages.Admin.StjuardesaModel
@{
}
<h2 class="text-center mb-3">
    @if (Model.Stjuardesa.Id == Guid.Empty)
    {
        <span>Napravi profil za stjuardesu</span>
    }
    else
    {
        <span>Azuriraj stjuardesin profil</span>
    }

</h2>
<div class="row justify-content-center">
    <div class="col-6">
        <form method="post">
            <div class="form-group row">
                <label class="col-3 col-form-label">Ime</label>
                <div class="col-9">
                    <input class="form-control" asp-for="@Model.Stjuardesa.Ime" value="@Model.Stjuardesa.Ime" required />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-3 col-form-label">Prezime</label>
                <div class="col-9">
                    <input class="form-control" asp-for="@Model.Stjuardesa.Prezime" value="@Model.Stjuardesa.Prezime" required />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-3 col-form-label">Godine staza</label>
                <div class="col-9">
                    <input type="number" class="form-control" asp-for="@Model.Stjuardesa.GodineStaza" value="@Model.Stjuardesa.GodineStaza" required />
                </div>
            </div>

            @if (Model.Stjuardesa.Id == Guid.Empty)
            {
                <button type="submit" asp-page-handler="create" class="btn btn-block btn-primary">Kreiraj</button>
            }
            else
            {
                <input type="hidden" class="form-control" asp-for="@Model.Stjuardesa.Id" value="@Model.Stjuardesa.Id" />
                <button type="submit" asp-page-handler="update" class="btn btn-block btn-info">Azuriraj</button>
                <a class="btn btn-block btn-primary mt-1" href="Stjuardesa">Kreiraj novi profil za stjuardesu</a>
            }


        </form>
    </div>
</div>
<table class="table table-striped mt-5 mb-5">
    <thead>
        <tr>

            <th scope="col">Ime</th>
            <th scope="col">Prezime</th>
            <th scope="col">Godine staza</th>

            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stjuardesa in Model.ListaStjuardesa)
        {
            <tr>
                <th scope="row">@stjuardesa.Ime</th>
                <td>@stjuardesa.Prezime</td>
                <td>@stjuardesa.GodineStaza</td>

                <td>
                    <form method="post">
                        <button class="btn btn-danger" asp-page-handler="delete" asp-route-id="@stjuardesa.Id">Obrisi</button>
                    </form>
                </td>
                <td>
                    <a href="Stjuardesa?id=@stjuardesa.Id" class="btn btn-info">Azuriraj</a>
                </td>
            </tr>
        }
    </tbody>

</table>