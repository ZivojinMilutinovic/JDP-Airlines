@page
@model JDP_Airlines.Pages.Admin.AvionModel
@{
    ViewData["Title"] = "Avion";
}

<h2 class="text-center mb-3">
    @if (Model.Avion.ID == Guid.Empty)
    {
        <span>Napravi avion</span>
    }
    else
    {
        <span>Azuriraj avion</span>
    }

</h2>
<div class="row justify-content-center">
    <div class="col-6">
        <form method="post">
            <div class="form-group row">
                <label class="col-2 col-form-label">Proizvodjac</label>
                <div class="col-10">
                    <input class="form-control" asp-for="@Model.Avion.Proizvodjac" value="@Model.Avion.Proizvodjac" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Nosivost</label>
                <div class="col-10">
                    <input class="form-control" asp-for="@Model.Avion.Nosivost" value="@Model.Avion.Nosivost" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Kapacitet</label>
                <div class="col-10">
                    <input class="form-control" asp-for="@Model.Avion.Kapacitet" value="@Model.Avion.Kapacitet" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Sirina</label>
                <div class="col-10">
                    <input class="form-control" asp-for="@Model.Avion.Sirina" value="@Model.Avion.Sirina" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Duzina</label>
                <div class="col-10">
                    <input type="number" class="form-control" asp-for="@Model.Avion.Duzina" value="@Model.Avion.Duzina" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Visina</label>
                <div class="col-10">
                    <input type="number" class="form-control" asp-for="@Model.Avion.Visina" value="@Model.Avion.Visina" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Godina Proizvodnje</label>
                <div class="col-10">
                    <input type="number" class="form-control" asp-for="@Model.Avion.GodinaProizvodnje" value="@Model.Avion.GodinaProizvodnje" />
                </div>
            </div>
            <div class="form-check mb-2">
                <input type="checkbox" class="form-check-input" asp-for="@Model.Avion.Putnicki">
                <label class="form-check-label">Putnicki avion (ostaviti prazno za teretni)</label>
            </div>
            @if (Model.Avion.ID == Guid.Empty)
            {
                <button type="submit" asp-page-handler="create" class="btn btn-block btn-primary">Kreiraj</button>
            }
            else
            {
                <input type="hidden" class="form-control" asp-for="@Model.Avion.ID" value="@Model.Avion.ID" />
                <button type="submit" asp-page-handler="update" class="btn btn-block btn-info">Azuriraj</button>
                <a class="btn btn-block btn-primary mt-1" href="Avion">Kreiraj nov avion</a>
            }


        </form>
    </div>
</div>
<table class="table table-striped mt-5 mb-5">
    <thead>
        <tr>
            <th scope="col">Proizvodjac</th>
            <th scope="col">Putnicki</th>
            <th scope="col">Nosivost</th>
            <th scope="col">Kapacitet</th>
            <th scope="col">Sirina</th>
            <th scope="col">Duzina</th>
            <th scope="col">Visina</th>
            <th scope="col">Godina Proizvodnje</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var avion in Model.ListaAviona)
        {
            <tr>
                <th scope="row">@avion.Proizvodjac</th>
                @if (avion.Putnicki)
                {
                    <td>Da</td>
                }
                else
                {
                    <td>Ne</td>
                }
                <td>@avion.Kapacitet</td>
                <td>@avion.Nosivost</td>
                <td>@avion.Sirina</td>
                <td>@avion.Duzina</td>
                <td>@avion.Visina</td>
                <td>@avion.GodinaProizvodnje</td>
                <td>
                    <form method="post">
                        <button class="btn btn-danger" asp-page-handler="delete" asp-route-id="@avion.ID">Obrisi</button>
                    </form>
                </td>
                <td>
                    <a href="Avion?id=@avion.ID" class="btn btn-info">Azuriraj</a>
                </td>
            </tr>
        }
    </tbody>

</table>